@model RedefinirSenhaModel
@{
    Layout = "_LayoutEsqueceSenha";
    ViewData["Title"] = "Recuperar Senha";
}
<div class="container">
<div class="window">
    <h1 class="main-title">Esqueci minha senha...</h1>
    <form class="user-data" asp-controller="RedefinirSenha" asp-action="EnviarToken" method="post">
        <label class="input-label for=" email>Informe seu endereço de email para o envio do código de alteração de senha.</label>
        <input class="user-input" placeholder="•••••••••@@example.com" type="text" asp-for="Email" id="email" required="required">
        @Html.ValidationMessageFor(x => x.Email)
            @if (TempData["MensagemErro"] != null)
            {
                    @TempData["MensagemErro"]
            }
            <div class="btn-functions">
        <button class="btn-style" id="entrar">Enviar</button>
    </div>
    </form>
</div>
</div>